<%- include('partials/header') -%>
    <main>
        <div>
            <section>
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <p class="text-white text-xl"><%= el.msg %></p>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <p class="text-white text-xl"><%= el.msg %></p>
                    <% }) %>    
                <% } %>
                <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-1" aria-hidden="true">
                  <div class="relative left-[calc(50%-1rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-200 via-gray-400 to-gray-600 opacity-20 sm:left-[calc(50%-20rem)] sm:w-[70rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
                </div>
                <form action="/signup" method="post">
                  <div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
                    <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
                      <h1 class="title-font font-semibold text-3xl text-white">Join <span class="font-extrabold">Trade<span class="text-green-500">Vault</span></span> - Your Gateway to Smart Trading</h1>
                      <p class="leading-relaxed text-white mt-4">Ready to take your trading to the next level? Sign up for TradeVault today and unlock a world of possibilities! Log your trades, gain insights from AI feedback, analyze your performance, and stay ahead with real-time news on stock tickers. Elevate your trading experience â€“ Join TradeVault now and trade with confidence!</p>
                    </div>
                    <div class="lg:w-2/6 md:w-1/2 bg-gray-800 bg-opacity-20 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
                      <h2 class="text-white text-xl font-bold title-font mb-5">Sign Up</h2>
                      <div class="relative mb-4">
                        <label for="email" class="leading-7 text-md text-gray-400">Email</label>
                        <input type="email" id="email" name="email" required class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                      </div>
                      <div class="relative mb-4">
                        <label for="userNmae" class="leading-7 text-md text-gray-400">Username</label>
                        <input type="text" id="userName" name="userName" required class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                      </div>
                      <div class="relative mb-4">
                        <label for="password" class="leading-7 text-md text-gray-400">Password</label>
                        <input type="password" id="password" name="password" required class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                      </div>
                      <div class="relative mb-4">
                        <label for="confirmPassword" class="leading-7 text-md text-gray-400">Confirm Password</label>
                        <input type="password" id="confirmPassword" required name="confirmPassword" class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                      </div>
                      <button type="submit" class="font-semibold text-white bg-green-500 border-0 py-2 px-8 focus:outline-none hover:bg-green-600 rounded text-lg">Sign Up</button>
                      <p class="text-md text-gray-100 mt-3">Have an account? <a class="font-semibold hover:text-blue-500" href="/login">Log In</a></p>
                    </div>
                  </div>
                </form>
            </section>
        </div>
    </main>
<%- include('partials/footer') -%>