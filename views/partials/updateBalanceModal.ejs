<!-- UPDATE BALANCE MODAL -->
<dialog id="updateBalance" class="modal rounded-lg bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-50">
    <section class="bg-black rounded-lg border border-gray-100
    p-6">
        <!-- to close the modal -->
        <div class="flex justify-between items-center">
            <h3 class="font-bold text-2xl">Update Balance</h3>
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost text-red-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>                  
                </button>
            </form>
        </div>
        <form 
            action="/post/updateBalance/<%= user._id %>?_method=PUT" 
            method="POST"
        >
            <!-- FIRST ROW -->
            <div class="flex my-4">
                <!-- balance -->
                <div class="flex-col justify-center items-center">
                    <label class="block mb-2 mx-2 text-xl" for="balance">Account Balance</label>
                    <input class="input input-bordered p-2 mx-2" type="number" name="balance" id="balance" step=".01" value="<%= user.accountBalance %>" required>
                </div>
            </div>

            <!-- Update -->
            <div class="flex justify-center my-2">
                <button class="btn rounded-lg px-10 items-center bg-blue-500 text-xl font-bold" type="submit">Update</button>
            </div>
        </form>
    </section>
</dialog>