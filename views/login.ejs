<%- include('partials/header') -%>

<main>
  <div>
    <section>
      <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-1" aria-hidden="true">
        <div class="relative left-[calc(50%-1rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-200 via-gray-400 to-gray-600 opacity-20 sm:left-[calc(50%-20rem)] sm:w-[70rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
      </div>
      <form action="/login" method="post">
        <div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
          <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
            <h1 class="title-font font-semibold text-3xl text-white"><span class="font-extrabold">Trade<span class="text-green-500">Vault</span></span> - Log In and Trade Smart</h1>
            <p class="leading-relaxed text-white mt-4">Welcome back, Trader! Your journey continues here. Log in to TradeVault now to access your personalized trading journal, review AI insights on your trades, analyze performance trends, and stay informed with real-time stock ticker news. Your success story awaits â€“ Log in to TradeVault and let the trading adventure unfold!</p>
          </div>
          <div class="lg:w-2/6 md:w-1/2 bg-gray-800 bg-opacity-20 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
            <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
              <div class="flex items-center justify-center bg-yellow-400 bg-opacity-40 text-gray-100 my-2 p-2 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                </svg>
                <p class="text-md ml-2"><%= el.msg %></p>
              </div>
              <% }) %> <% } %> <% if (locals.messages.info) { %> <%
              messages.info.forEach( el => { %>
              <p class="text-md ml-2"><%= el.msg %></p>
            <% }) %> <% } %>
            <h2 class="text-white text-xl font-bold title-font mb-5">Log In</h2>
            <div class="relative mb-4">
              <label for="email" class="leading-7 text-md text-gray-400">Email</label>
              <input type="email" id="email" name="email" required class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
              <label for="password" class="leading-7 text-md text-gray-400">Password</label>
              <input type="password" id="password" name="password" required class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <button type="submit" class="font-semibold text-white bg-green-500 border-0 py-2 px-8 focus:outline-none hover:bg-green-600 rounded text-lg">Log In</button>
            <p class="text-md text-gray-100 mt-3">Don't have an account? <a class="font-semibold hover:text-blue-500" href="/signup">Sign Up</a></p>
          </div>
        </div>
      </form>
    </section>
  </div>
</main>
<%- include('partials/footer') -%>
