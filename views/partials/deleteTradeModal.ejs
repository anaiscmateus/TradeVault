<!-- You can open the modal using ID.showModal() method -->
<dialog id="deleteModal<%= trades[i]._id %>" class="modal">
  <div class="modal-box">
    <h3 class="font-bold text-lg text-center">Are you sure you want to delete this?</h3>
    <div class="flex justify-center">
        <form method="dialog">
            <button class="btn btn-neutral m-3 p-3 text-white">Cancel</button>
        </form>
        <form 
        action="/post/deleteTrade/<%= trades[i].id %>?_method=DELETE" 
        method="POST">
        <button class="btn bg-red-500 text-white m-3 p-3">Delete</button>
        </form>
    </div>
  </div>
</dialog>

