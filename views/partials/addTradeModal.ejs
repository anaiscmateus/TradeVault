<!-- ADD TRADE MODAL -->
<dialog id="addTradeModal" class="modal rounded-lg bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-50">
    <section class="bg-black rounded-lg border border-gray-100
    p-6">
        <!-- to close the modal -->
        <div class="flex justify-between items-center">
            <h3 class="font-bold text-2xl">New Trade</h3>
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost text-red-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>                  
                </button>
            </form>
        </div>
        <p class="mb-3">Press ESC key or click on âœ• button to close</p>
        <form 
            action="/post/addTrade" 
            enctype="multipart/form-data" 
            method="POST"
        >
            <!-- FIRST ROW -->
            <div class="flex my-4">
                <!-- MARKET -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="market">Market</label>
                    <select name="market" id="market" class="select select-bordered mr-2" required>
                        <option selected disabled></option>
                        <option value="stock">STOCK</option>
                        <option value="option">OPTION</option>
                        <option value="crypto">CRYPTO</option>
                        <option value="futures">FUTURES</option>
                        <option value="forex">FOREX</option>
                        <option value="index">INDEX</option>
                    </select>
                </div>

                <!-- BUY DATE -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="initialPurchaseDate">Buy Date</label>
                    <input class="p-2 input mx-2" type="datetime-local" name="initialPurchaseDate" id="initialPurchaseDate" value="<%= currentDate.toISOString().slice(0, -8) %>" required>
                </div>

                <!-- SYMBOL -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="symbol">Symbol</label>
                    <input type="text" class="uppercase input input-bordered p-2 mx-2 rounded-lg" name="symbol" id="symbol" required>
                </div>

                <!-- DIRECTION -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="direction">Direction</label>
                    <select name="direction" id="direction" class="select select-bordered mx-2" required>
                        <option selected disabled></option>
                        <option value="up">UP</option>
                        <option value="down">DOWN</option>
                        <option value="chop">CHOP</option>
                    </select>
                </div>

                <!-- Image -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="file">Image</label>
                    <input type="file" name="file" id="file" class="mx-2 file-input file-input-bordered file-input-md" />
                </div>
            </div>

            <!-- SECOND ROW -->
            <div class="flex my-4">
                <!-- ENTRY PRICE -->
                <div>
                    <label class="block mb-2 mr-2 text-xl" for="initialPurchasePrice">Entry Price</label>
                    <input class="input input-bordered p-2 mr-2" type="number" name="initialPurchasePrice" id="initialPurchasePrice" step=".01" required>
                </div>

                <!-- STOP LOSS -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="stopLoss">Stop Loss</label>
                    <input class="input input-bordered p-2 mx-2" type="number" name="stopLoss" id="stopLoss" step=".01" required>
                </div>

                <!-- QUANTITY -->
                <div>
                    <label class="block mb-2 mx-2 text-xl" for="initialPurchaseQuantity">Quantity</label>
                    <input class="input input-bordered p-2 mx-2" type="number" name="initialPurchaseQuantity" id="initialPurchaseQuantity" step=".01" required>
                </div>
            </div>

            <!-- NOTES -->
            <div>
                <h3 class="text-xl">Notes</h3>
                <textarea name="notes" id="notes" rows="5" class="my-3 p-2 textarea textarea-bordered textarea-lg w-full"></textarea>
            </div>

            <!-- SAVE -->
            <div class="flex justify-end my-2">
                <button class="btn rounded-lg px-10 items-center bg-blue-500 text-xl font-bold" type="submit">Save</button>
            </div>
        </form>
    </section>
</dialog>
