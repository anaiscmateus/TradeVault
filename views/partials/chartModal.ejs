<dialog id="chartModal<%= trades[i]._id %>" class="modal">
    <section class="modal-box w-11/12 max-w-5xl my-4">
        <div class="flex justify-between my-2">
            <div>
                <h3 class="font-bold text-xl">$<%= trades[i].symbol.toUpperCase()%></h3>
            </div>
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost text-red-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>                  
                </button>
            </form>
        </div>
        <div class="my-4">
            <h3 class="font-bold text-2xl">NOTES</h3>
            <textarea rows="5" class="my-3 p-2 textarea textarea-bordered textarea-lg w-full" disabled><%= trades[i].notes %></textarea>
        </div>
        <div>
            <a href="<%= trades[i].image %>" target="_blank">
                <img src="<%= trades[i].image %>" alt="chart">
            </a>
        </div>
    </section>
</dialog>